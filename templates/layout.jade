include mixins
doctype
html
	head
		link(rel='stylesheet' href=(environment=='production')?'/imagestalk/style.css':'/style.css')
		link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
		title=title
	body(class=current.path.join(' ')+' '+environment)
		#Wrapper
			#Content
				block SIDEBAR
				.content
					block TITLE
						+title(current,'Images Talk')
					block BODY
						!=setSymbols(yield)
			#Footer
				block FOOTER
					p content copyrighted (c) Arab Image Foundation

