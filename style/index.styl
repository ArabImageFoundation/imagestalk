highlightColor = #0093FF
backgroundColor = #f4f4f7

@import '../node_modules/nib'
@import './reset'
@import './sidebar'
@import './text'
@import './links'
@import './tables'
@import './icons'

body,html
	width 100%
	height 100%

body
	padding 0
	margin 0

#Wrapper
	max-width 1096px
	min-width 500px
	min-height 100%
	margin 0 auto

#Content
	position relative
	min-height 100%

.content
	min-height 100%
	box-sizing border-box
	padding .7em 2em 0 2em
	font-size 1.2em
	
section
	padding-bottom 2em
	border-bottom 1px solid highlightColor
	margin-bottom 2em
	line-height 1.2em
	
.preliminary-information .content
	margin-left 16em
	
.preliminary-information.tasks .content
	margin-left 0

#Footer
	box-sizing border-box
	padding .3em
	text-align right
	p
		font-size .7em
		margin 0 auto
		padding 0
		
	
iframe
	width 100%
	height 800px