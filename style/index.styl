highlightColor = #0093FF
backgroundColor = #f4f4f7

@import '../node_modules/nib'
@import './reset'
@import './sidebar'
@import './text'
@import './links'
@import './tables'
@import './icons'
@import './iframe'
@import './timeline'
@import './loader'
@import './toc'

body,html
	width 100%
	height 100%

body
	padding 0
	margin 0
	.loading
		position fixed
		width 100%
		height 100%
		background black
		color white
		display block
		top -100%
		left 0
		z-index 3000
		opacity 0
		text-align center
		transition opacity 1s ease-out 0s,top 0s linear 1s
	&.loading
		.loading
			top 0
			opacity 1

#Wrapper
	min-height 100%
	margin 0 auto

#Content
	min-height 100%
	margin-left 9em
	>.content
		min-height 100%
		box-sizing border-box
		padding .7em 2em 0 2em
		font-size 1.2em
	
section
	padding-bottom 2em
	border-bottom 1px solid highlightColor
	margin-bottom 2em
	line-height 1.2em

#Footer
	box-sizing border-box
	margin-top 2em
	margin-bottom 1em
	padding .3em
	text-align right
	p
		font-size .7em
		margin 0 auto
		padding 0

img
	max-width 100%

@import './responsive'

.has-reveal
	#Wrapper, #Content, #Content>.content
		width 100%
		height 100%
		max-width 100%
		padding 0
		margin 0
	#Content>.content>h1
		display none
	#Footer
		display none
	&.print-pdf
		.slides
			> section
				margin-bottom 5em
				&:after
					content ''
					display block
					width 100%
					height 1px

.no-reveal.research
	h1
		font-size 1.5em
	#Content>.content>h1
		font-size 3em
	.slides
		> section > h1, > section > section:nth-child(1) > h1
			font-size 2em
		> section
			> section
				border-bottom none
				padding-bottom 0